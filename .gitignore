# Ignore bundler config.
/.bundle

# Ignore bundle
/vendor/bundle

# Ignore SimpleCov directory.
/coverage

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*
!/log/.keep
/tmp

# Ignore environment variables
.env

# Ignore dev convenience script
*.sh

# Ignore dev startup logs
00.all.log
01.dev.log

# Ignore production assets
public/assets

# Ignore Process documents
*.bmpr
